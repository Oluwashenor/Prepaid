<div style="font-family:Roboto" class="bg-[#38383D] w-full lg:w-[50%] shadow-md h-[230px] sm:h-[270px] lg:h-[230px] rounded-2xl space-y-3 bg-cover bg-no-repeat bg-[url('/images/pattern-tree.svg')]">
    <div class="rounded-2xl bg-gradient-to-r from-[#1E1E20] to-[#38383D] opacity-80 h-full">
        <div class="flex flex-col rounded-2xl justify-between py-2 px-2 h-full z-40">
            @* Row 1 *@
            <div class="px-3 py-2 flex justify-between items-center">
                <div class="flex justify-between items-center">
                    <span>
                        <img class="h-5" src="/lib/m-icons/wifi.svg" alt="Menu" />
                    </span>
                </div>
                <div class="flex space-x-3 justify-between items-center">
                    <span>
                        <label class="relative flex justify-between items-center group text-xl">
                            <input type="checkbox" class="absolute left-1/2 -translate-x-1/2 w-full h-full peer appearance-none rounded-md" />
                            <span class="w-6 px-1 h-3 flex items-center flex-shrink-0 bg-gray-300 rounded-full duration-300 ease-in-out peer-checked:bg-white after:w-2 after:h-2 after:bg-black after:rounded-full after:shadow-md after:duration-300 peer-checked:after:translate-x-3 group-hover:after:translate-x-1"></span>
                        </label>
                    </span>
                    <span @onclick="OpenDialog">
                        <img class="h-5" src="/lib/m-icons/menu_white.svg" alt="Menu" />
                    </span>
                </div>

            </div>
            @* Row 2 *@
            <div class="px-2 py-2 flex justify-between items-center">
                <CardNumberComponent DarkIcon=false HideCardNumberEvent="HideCardNumberEvent" CardNumber="@CardNumber" ShowImage=false NumberHidden="NumberHidden" />
            </div>
            @* Row 3 *@
            <div class="px-2 py-2 flex justify-between items-center">
                <div class="flex justify-between space-x-6">
                    <div class="flex flex-col text-white">
                        <span class="opacity-80">Card Holder</span>
                        <span>@Card.Owner</span>
                    </div>
                    <div class="flex flex-col text-white">
                        <span class="opacity-80">Expires</span>
                        <span>@Card.Expires.ToString("MM/yy")</span>
                    </div>
                </div>
                <div>
                    <img class="h-16 lg:h-12" src="/images/mastercard.png" alt="Alternate Text" />
                </div>
            </div>

        </div>
    </div>
</div>



<CustomModal @ref=customDialog></CustomModal>


@code {
    [Parameter] public CardDTO Card { get; set; } = new();
    [Parameter] public EventCallback<bool> HideCardNumberEvent { get; set; }
    public string CardHashed { get; set; } = "**** **** **** 7852";
    [Parameter] public string? CardNumber { get; set; }
    [Parameter] public bool NumberHidden { get; set; } = false;

    CustomModal? customDialog;


    void OpenDialog()
    {
        customDialog?.OpenDialog();
    }
}
